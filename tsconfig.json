{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    // Tests fail when this is true, surely there is a way
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx"
    // "allowImportingTsExtensions": true
  },
  // FIXME: Just added might cause errors
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}

