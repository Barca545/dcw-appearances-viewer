{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext", "DOM", "dom.iterable"],
    "useDefineForClassFields": true,
    "incremental": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "rootDir": "../",
    "outDir": "../target/"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.js", "../vite.main.config.ts"]
}
